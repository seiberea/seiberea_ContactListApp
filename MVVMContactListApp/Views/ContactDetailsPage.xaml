<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MVVMContactListApp.ViewModels"
             x:Class="MVVMContactListApp.Views.ContactDetailsPage"
             Title="Contact Details Page">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="{Binding Name}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Email}" FontSize="18" />
            <Label Text="{Binding PhoneNumber}" FontSize="18" />
            <Label Text="{Binding Description}" FontSize="16" />
        </VerticalStackLayout>
    </ScrollView>
    </ContentPage>